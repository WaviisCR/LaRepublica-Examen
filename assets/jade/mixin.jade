mixin titulo(tittle, subtitulo)
	.encabezado
		h2= tittle
		p= subtitulo
			span
				img(src="assets/image/double-arrow-bottom.png")

mixin photo(call)
	case call
		when 'uno'
			a(href="#")
				img(src="assets/image/blog_avatar_01.jpg")
		when 'dos'
			a(href="#")
				img(src="assets/image/blog_avatar_02.jpg")
		when 'tres'
			a(href="#")
				img(src="assets/image/blog_avatar_03.jpg")
		when 'cuatro'
			a(href="#")
				img(src="assets/image/img_author_columnista.jpg")
		when 'cinco'
			a(href="#")
				img(src="assets/image/img_blogueros.jpg")

mixin cdrgrey(call, tittlegrey, comentario)
		.singlegrey
			+photo(call)
			.text-grey
				p.nombre= tittlegrey
				p.comentario= comentario

mixin cdrprincipal(fecha, headline, call, tittlegrey, comentario)
		.single.pull-left
			.titulos
				p= fecha
				h3= headline 
			+cdrgrey(call, tittlegrey, comentario)

mixin img-avatar(call)
	case call
		when "a-1"
			img.resize(src="assets/image/img-columnistas.jpg", alt="avatar-columnista")
		when "a-2"
			img(src="assets/image/img_blogueros.jpg", alt="avatar-columnista")

mixin banner-columnistas(call, name, tittle)
	.columnista.pull-left
		.avatar
			+img-avatar(call)
		.info
			h4=name
			span=tittle

//SECCION NOTICIAS//
mixin img-noticia(call)
	case call
		when "img-not-1"
			img(src="assets/image/img_especiales.jpg", alt="noticia1")
		when "img-not-2"
			img(src="assets/image/img_especiales_aside.jpg", alt="noticia2")
mixin noticia(titular, call, descripcion)
	.noticia
		h3=titular
		.img-noticia
			+img-noticia(call)
		P=descripcion
//SECCION ULTIMAS NOTICIAS//
mixin img-ultima(call)
	case call
		when 'ul-noti-1'
			img.pull-left(src="assets/image/img_news_grid.jpg", alt="")
		when 'ul-noti-2'
			img.pull-left(src="assets/image/img_news_grid.jpg", alt="")
		when 'ul-noti-3'
			img.pull-left(src="assets/image/img_news_grid.jpg", alt="")
		when 'ul-noti-4'
			img.pull-left(src="assets/image/img_news_grid.jpg", alt="")
mixin ultimas(date, titulo, call, subtitulo)
	.mas-noticias.clearfix
		p=date
		h4=titulo
		+img-ultima(call)
		.info
			span=subtitulo
		.interaccion
			.redes.box-shadow
				a(href="#"): i.fa.fa-facebook
				a(href="#"): i.fa.fa-twitter
				a(href="#"): i.fa.fa-google
//ASIDE//
mixin img-aweita(call, content)
	case call
		when "aw-1"
			.img-aweita
				img.pull-left(src="assets/image/img_aweita.jpg", alt="")
				.noticia
					p=content
		when "aw-2"
			.img-aweita
				img.pull-left(src="assets/image/img_fotodes.jpg", alt="")
				.noticia
					p=content
mixin aside-section(content)
	hr.custom
	.tittle
		h5=content
mixin foto-des(call,content)
	.foto-dest.clearfix
		+img-aweita(call)
		h5=content
mixin imagen-especiales(call)
	case call
		when "esp1"
			img(src="assets/image/img_especiales_aside.jpg", alt="")
mixin especiales(call, info)
	.especiales
		.especiales-img
			+imagen-especiales(call)
			.img-info-esp
				h5=info